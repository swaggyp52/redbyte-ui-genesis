{
  "name": "redbyte-ui",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*",
    "tools/*"
  ],
  "scripts": {
    "dev": "pnpm --filter @redbyte/playground dev",
    "build": "pnpm -r run build",
    "lint": "pnpm -r --if-present run lint",
    "typecheck": "pnpm -r --if-present run typecheck",
    "test": "pnpm -r --if-present run test",
    "format": "pnpm -r --if-present run format",
    "a11y": "pnpm -r --if-present run test:a11y",
    "perf": "pnpm -r --if-present run test:perf",
    "coverage": "pnpm -r --if-present test -- --coverage --runInBand"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^5.1.1",
    "autoprefixer": "^10.4.22",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "postcss": "^8.5.6",
    "rimraf": "^6.1.2",
    "tailwindcss": "^3.4.18",
    "vite": "^7.2.6",
    "vite-tsconfig-paths": "^5.1.4"
  },
  "dependencies": {
    "zustand": "^5.0.9"
  }
}
