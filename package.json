{
  "name": "redbyte-ui",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*",
    "tools/*"
  ],
  "scripts": {
    "dev": "pnpm --filter @redbyte/playground dev",
    "build": "pnpm -r run build",
    "lint": "pnpm -r --if-present run lint",
    "typecheck": "pnpm -r --if-present run typecheck",
    "test": "vitest run",
    "format": "pnpm -r --if-present run format",
    "a11y": "pnpm -r --if-present run test:a11y",
    "perf": "pnpm -r --if-present run test:perf",
    "coverage": "vitest run --coverage"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^5.1.1",
    "autoprefixer": "^10.4.22",
    "eslint-plugin-jsx-a11y": "workspace:*",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.1.0",
    "@vitest/coverage-v8": "^2.1.8",
    "jsdom": "^27.2.0",
    "postcss": "^8.5.6",
    "rimraf": "^6.1.2",
    "tailwindcss": "^3.4.18",
    "vite": "^7.2.6",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^2.1.8"
  },
  "dependencies": {
    "zustand": "^5.0.9"
  }
}
